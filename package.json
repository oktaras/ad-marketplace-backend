{
  "name": "backend",
  "version": "0.0.1",
  "description": "Ads Marketplace Backend API",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "predev": "prisma generate",
    "dev": "npm run dev:api",
    "dev:api": "tsx watch src/server.ts",
    "dev:worker": "tsx watch src/workers/main.ts",
    "dev:bot": "tsx watch src/workers/telegram-bot.ts",
    "prebuild": "prisma generate",
    "build": "tsc",
    "prestart": "prisma generate",
    "start": "npm run start:api",
    "start:api": "node dist/server.js",
    "start:worker": "node dist/workers/main.js",
    "start:bot": "node dist/workers/telegram-bot.js",
    "openapi:export": "tsx scripts/export-openapi.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset"
  },
  "dependencies": {
    "@prisma/client": "^6.3.0",
    "@telegram-apps/init-data-node": "^2.0.6",
    "@ton/core": "^0.63.0",
    "@ton/crypto": "^3.3.0",
    "@ton/ton": "^16.1.0",
    "@vercel/blob": "^2.2.0",
    "bullmq": "^5.67.2",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "eventemitter3": "^5.0.4",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "grammy": "^1.33.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nanoid": "^5.0.9",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "telegram": "^2.26.22",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.14.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "eslint": "^9.26.0",
    "prisma": "^6.3.0",
    "tsx": "^4.19.4",
    "typescript": "^5.9.3",
    "vite": "^6.0.11",
    "vitest": "^3.0.5"
  }
}
